    <section class="grid" id="gamesGrid"></section>

    <footer>This is a demo site. Don’t pirate — support developers and creators.</footer>
  </main>

  <div id="piracyOverlay" class="piracy" style="display:none">
    <div class="piracy-card">
      <h1>PIRATING IS ILLEGAL</h1>
      <p>Piracy — downloading or distributing paid games, apps, or other copyrighted works without permission — is illegal and harms creators. Support developers by buying games, using official demos, or choosing free & open alternatives.</p>
      <p style="margin-top:10px;color:var(--muted);font-size:13px">Consequences can include account bans, malware risks, and legal penalties in some countries.</p>
      <div style="margin-top:18px"><button class="btn buy" onclick="hidePiracy()">Go back to GamesHub</button></div>
    </div>
  </div>

  <div id="checkoutOverlay" class="overlay" style="display:none">
    <div class="card-modal" role="dialog" aria-modal="true">
      <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:8px">
        <h2 id="checkoutTitle">Checkout</h2>
        <button class="btn free" onclick="closeCheckout()">Close</button>
      </div>
      <div id="checkoutBody">
        <p class="muted">Demo payment — <strong>this is fake</strong>. Do NOT enter real details. This only simulates success.</p>
        <div style="margin-top:12px"><label>Game</label><div id="checkoutGame" style="font-weight:700"></div></div>
        <div style="margin-top:10px"><label>Name on card</label><input id="cardName" type="text" placeholder="Your name"/></div>
        <div style="margin-top:10px"><label>Card number</label><input id="cardNumber" type="tel" maxlength="19" placeholder="4242 4242 4242 4242"/></div>
        <div class="form-row" style="margin-top:10px"><div class="small"><label>Expiry</label><input id="exp" type="text" placeholder="MM/YY" maxlength="5"/></div><div style="width:110px"><label>CVV</label><input id="cvv" type="tel" placeholder="123" maxlength="4"/></div></div>
        <div class="pay-row"><div class="muted">Total: <span id="checkoutPrice" style="font-weight:700"></span></div><button class="btn buy" onclick="submitPayment()">Pay now</button></div>
        <div id="txResult" style="margin-top:12px;display:none"></div>
      </div>
    </div>
  </div>

  <script>
    const games = [
      {id:1,title:'Red Dead Redemption',price:'₹999',desc:'Epic western action-adventure',img:'https://upload.wikimedia.org/wikipedia/en/b/b7/Red_Dead_Redemption.jpg'},
      {id:2,title:'Red Dead Redemption 2',price:'₹1499',desc:'Outlaw life in a changing America',img:'https://upload.wikimedia.org/wikipedia/en/4/44/Red_Dead_Redemption_II.jpg'},
      {id:3,title:'God of War',price:'₹1299',desc:'Mythic battles of Kratos',img:'https://upload.wikimedia.org/wikipedia/en/a/a7/God_of_War_4_cover.jpg'},
      {id:4,title:'Call of Duty: Modern Warfare',price:'₹1199',desc:'First-person shooter',img:'https://upload.wikimedia.org/wikipedia/en/a/a3/Call_of_Duty_Modern_Warfare_%282019%29.jpg'},
      {id:5,title:'Forza Horizon 5',price:'₹999',desc:'Open world racing adventure',img:'https://upload.wikimedia.org/wikipedia/en/a/a8/Forza_Horizon_5_cover_art.jpg'},
      {id:6,title:'Need for Speed: Heat',price:'₹899',desc:'High-speed street racing',img:'https://upload.wikimedia.org/wikipedia/en/f/f4/Need_for_Speed_Heat_cover_art.jpg'}
    ];

    const grid = document.getElementById('gamesGrid');
    function renderGames(){
      grid.innerHTML = games.map(g=>`
        <div class='card'>
          <div class='thumb'><img src='${g.img}' alt='${g.title}' loading='lazy'></div>
          <div class='meta'><div><div class='title'>${g.title}</div><div style='font-size:13px;color:var(--muted)'>${g.desc}</div></div><div class='price'>${g.price}</div></div>
          <div style='display:flex;justify-content:space-between;align-items:center;margin-top:6px'>
            <div class='controls'><button class='btn buy' onclick='openCheckout(${g.id})'>Buy</button><button class='btn free' onclick='showPiracy()'>Free</button></div>
            <div style='font-size:12px;color:var(--muted)'>HD • 1 player</div>
          </div>
        </div>`).join('');
    }

    function showPiracy(){document.getElementById('piracyOverlay').style.display='flex';document.body.style.overflow='hidden';}
    function hidePiracy(){document.getElementById('piracyOverlay').style.display='none';document.body.style.overflow='';}

    let currentGame=null;
    function openCheckout(id){
      currentGame=games.find(x=>x.id===id);
      document.getElementById('checkoutGame').textContent=currentGame.title;
      document.getElementById('checkoutPrice').textContent=currentGame.price;
      document.getElementById('txResult').style.display='none';
      ['cardName','cardNumber','exp','cvv'].forEach(id=>document.getElementById(id).value='');
      document.getElementById('checkoutOverlay').style.display='flex';
      document.body.style.overflow='hidden';
    }
    function closeCheckout(){document.getElementById('checkoutOverlay').style.display='none';document.body.style.overflow='';}

    function submitPayment(){
      const tx=document.getElementById('txResult');
      tx.style.display='block';
      tx.innerHTML='<div class="tx-success">Processing payment...</div>';
      setTimeout(()=>{
        tx.innerHTML=`<div class='tx-success'>Payment successful</div><div style='color:var(--muted);font-size:13px;text-align:center'>Transaction ID: TXN-${Math.random().toString(36).slice(2,10).toUpperCase()}</div><div style='text-align:center;margin-top:8px'><button class='btn buy' onclick='closeCheckout()'>Done</button></div>`;
      },1200);
    }

    document.addEventListener('input',e=>{
      if(e.target.id==='cardNumber'){
        let v=e.target.value.replace(/\D/g,'').slice(0,16);
        e.target.value=v.replace(/(.{4})/g,'$1 ').trim();
      }
      if(e.target.id==='exp'){
        let v=e.target.value.replace(/\D/g,'').slice(0,4);
        if(v.length>2)v=v.slice(0,2)+'/'+v.slice(2);
        e.target.value=v;
      }
    });

    renderGames();
  </script>
</body>
